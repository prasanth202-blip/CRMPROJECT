@model List<CRM.Models.PartnerSubscriptionModel>
@{
    ViewData["Title"] = "Pending Refunds";
    var totalRefundAmount = ViewBag.TotalRefundAmount as decimal? ?? 0;
}

<div class="content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="fa-solid fa-money-bill-transfer me-2"></i>Pending Refunds</h2>
            <p class="text-muted">Cancelled subscriptions requiring refund processing</p>
        </div>
        <div class="text-end">
            <div class="badge bg-danger" style="font-size: 1.2rem; padding: 0.5rem 1rem;">
                Total: ₹@totalRefundAmount.ToString("N0")
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Search Partner</label>
                    <input type="text" class="form-control" name="search" value="@ViewBag.Search" placeholder="Company name or contact person">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa-solid fa-search me-2"></i>Search
                    </button>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <a href="/Subscription/PendingRefunds" class="btn btn-secondary w-100">
                        <i class="fa-solid fa-redo me-2"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Refunds Table -->
    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Partner</th>
                                <th>Plan</th>
                                <th>Billing</th>
                                <th>Amount</th>
                                <th>Cancelled On</th>
                                <th>Payment Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sub in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@sub.ChannelPartner?.CompanyName</strong><br>
                                        <small class="text-muted">@sub.ChannelPartner?.ContactPerson</small><br>
                                        <small class="text-muted">@sub.ChannelPartner?.Email</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@sub.Plan?.PlanName</span>
                                    </td>
                                    <td>@sub.BillingCycle</td>
                                    <td>
                                        <strong class="text-danger">₹@sub.Amount.ToString("N0")</strong>
                                    </td>
                                    <td>
                                        @sub.CancelledOn?.ToString("MMM dd, yyyy")<br>
                                        <small class="text-muted">@sub.CancelledOn?.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        @if (sub.LastPaymentDate.HasValue)
                                        {
                                            @sub.LastPaymentDate?.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-success btn-sm" 
                                                onclick="markRefundProcessed(@sub.SubscriptionId, '@sub.ChannelPartner?.CompanyName', @sub.Amount)">
                                            <i class="fa-solid fa-check me-1"></i>Mark Processed
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i&search=@ViewBag.Search">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <i class="fa-solid fa-check-circle me-2"></i>
            <strong>All caught up!</strong> No pending refunds at the moment.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function markRefundProcessed(subscriptionId, companyName, amount) {
            Swal.fire({
                title: 'Mark Refund as Processed',
                html: `
                    <div style="text-align: left;">
                        <p><strong>Partner:</strong> ${companyName}</p>
                        <p><strong>Refund Amount:</strong> ₹${amount}</p>
                        <hr>
                        <label class="form-label">Refund Notes (Optional)</label>
                        <textarea id="refundNotes" class="form-control" rows="3" placeholder="Transaction ID, payment method, etc."></textarea>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#10b981',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Confirm Processed',
                cancelButtonText: 'Cancel',
                preConfirm: () => {
                    return document.getElementById('refundNotes').value;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    const notes = result.value || '';
                    
                    fetch('/Subscription/MarkRefundProcessed', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: `subscriptionId=${subscriptionId}&refundNotes=${encodeURIComponent(notes)}`
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Success!',
                                text: data.message,
                                icon: 'success',
                                confirmButtonColor: '#10b981'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error',
                                text: data.message,
                                icon: 'error',
                                confirmButtonColor: '#ef4444'
                            });
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            title: 'Error',
                            text: 'Failed to update refund status',
                            icon: 'error',
                            confirmButtonColor: '#ef4444'
                        });
                    });
                }
            });
        }
    </script>
}
