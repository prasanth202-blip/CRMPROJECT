@model List<CRM.Models.PartnerSubscriptionModel>
@{
    ViewData["Title"] = "Manage Partner Subscriptions";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Active Partner Subscriptions</h5>
                </div>
                <div class="card-body">
                    <!-- Search and Filters -->
                    <form method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="search" id="searchInput" value="@ViewBag.Search" placeholder="Search partner name...">
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="plan" onchange="autoSubmitForm()">
                                    <option value="">All Plans</option>
                                    @if (ViewBag.Plans != null)
                                    {
                                        @foreach (var plan in ViewBag.Plans)
                                        {
                                            <option value="@plan.PlanId" selected="@(ViewBag.SelectedPlan == plan.PlanId.ToString())">@plan.PlanName</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="billing" onchange="autoSubmitForm()">
                                    <option value="">All Billing</option>
                                    <option value="Monthly" selected="@(ViewBag.SelectedBilling == "Monthly")">Monthly</option>
                                    <option value="Annual" selected="@(ViewBag.SelectedBilling == "Annual")">Annual</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <input type="date" class="form-control" name="fromDate" value="@ViewBag.FromDate" onchange="autoSubmitForm()" placeholder="From Date">
                            </div>
                            <div class="col-md-2">
                                <input type="date" class="form-control" name="toDate" value="@ViewBag.ToDate" onchange="autoSubmitForm()" placeholder="To Date">
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-primary w-100">Filter</button>
                            </div>
                        </div>
                    </form>
                    
                    <!-- Desktop Table View -->
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Partner</th>
                                    <th>Plan</th>
                                    <th>Billing</th>
                                    <th>Amount</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Any() == true)
                                {
                                    @foreach (var subscription in Model)
                                    {
                                        <tr>
                                            <td>@subscription.ChannelPartner?.CompanyName</td>
                                            <td>@subscription.Plan?.PlanName</td>
                                            <td>@subscription.BillingCycle</td>
                                            <td>₹@subscription.Amount.ToString("N2")</td>
                                            <td>@subscription.StartDate.ToString("dd/MM/yyyy")</td>
                                            <td>@subscription.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <button class="btn btn-sm btn-primary" onclick="upgradePlan(@subscription.ChannelPartnerId, @subscription.Plan.PlanId, '@subscription.BillingCycle', '@subscription.EndDate.ToString("dd/MM/yyyy")')">
                                                    Upgrade
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No active subscriptions found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Mobile Card View -->
                    <div class="mobile-cards">
                        @if (Model?.Any() == true)
                        {
                            @foreach (var subscription in Model)
                            {
                                <div class="subscription-card">
                                    <div class="partner-name">@subscription.ChannelPartner?.CompanyName</div>
                                    <div class="plan-info">
                                        <span><strong>@subscription.Plan?.PlanName</strong></span>
                                        <span class="amount">₹@subscription.Amount.ToString("N2")</span>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">Billing:</small><br>
                                            <span>@subscription.BillingCycle</span>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">End Date:</small><br>
                                            <span>@subscription.EndDate.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        <button class="btn btn-sm btn-primary w-100" onclick="upgradePlan(@subscription.ChannelPartnerId, @subscription.Plan.PlanId, '@subscription.BillingCycle', '@subscription.EndDate.ToString("dd/MM/yyyy")')">
                                            Upgrade Plan
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <p class="text-muted">No active subscriptions found</p>
                            </div>
                        }
                    </div>
                    
                    <!-- Pagination -->
                    @if (ViewBag.TotalPages > 1)
                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                @if (ViewBag.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.Search&plan=@ViewBag.SelectedPlan&billing=@ViewBag.SelectedBilling&fromDate=@ViewBag.FromDate&toDate=@ViewBag.ToDate">Previous</a>
                                    </li>
                                }
                                
                                @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?page=@i&search=@ViewBag.Search&plan=@ViewBag.SelectedPlan&billing=@ViewBag.SelectedBilling&fromDate=@ViewBag.FromDate&toDate=@ViewBag.ToDate">@i</a>
                                    </li>
                                }
                                
                                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.Search&plan=@ViewBag.SelectedPlan&billing=@ViewBag.SelectedBilling&fromDate=@ViewBag.FromDate&toDate=@ViewBag.ToDate">Next</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Upgrade Plan Modal -->
<div class="modal fade" id="upgradePlanModal" tabindex="-1">
    <div class="modal-dialog" style="max-width: 50%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upgrade Partner Plan</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <input type="hidden" id="channelPartnerId" />
                <input type="hidden" id="currentPlanId" />
                <div class="row">
                    @if (ViewBag.AvailablePlans != null)
                    {
                        @foreach (var plan in ViewBag.AvailablePlans)
                        {
                            <div class="col-lg-6 col-md-12 mb-4">
                                <div class="card h-100 plan-card" id="plan-@plan.PlanId">
                                    <div class="card-body d-flex flex-column">
                                        <div class="plan-header">
                                            <div>
                                                <h5 class="plan-name">@plan.PlanName</h5>
                                                @if (!string.IsNullOrEmpty(plan.Description))
                                                {
                                                    <p class="text-muted mb-0 small">@plan.Description</p>
                                                }
                                            </div>
                                            <div class="d-flex align-items-center gap-2 mb-2">
                                                <span class="plan-type @plan.PlanType.ToLower()">@plan.PlanType</span>
                                                <span class="badge bg-success current-plan-badge" style="display: none;">Current Plan</span>
                                            </div>
                                            <div class="current-plan-expire" style="display: none;">
                                                <small class="text-muted">Expires: <span class="expire-date"></span></small>
                                            </div>
                                        </div>

                                        <div class="plan-pricing mb-3">
                                            <div class="row text-center">
                                                <div class="col-6 monthly-pricing">
                                                    <div class="price-label">Monthly</div>
                                                    <div class="price-amount">
                                                        <span class="price-currency">₹</span>@plan.MonthlyPrice.ToString("N0")
                                                    </div>
                                                </div>
                                                <div class="col-6 annual-pricing">
                                                    <div class="price-label">Annual</div>
                                                    <div class="price-amount">
                                                        <span class="price-currency">₹</span>@plan.YearlyPrice.ToString("N0")
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="plan-features flex-grow-1">
                                            @{
                                                var hasIntegrations = plan.HasWhatsAppIntegration || plan.HasFacebookIntegration || plan.HasEmailIntegration || plan.HasCustomAPIAccess;
                                                var hasReportsSupport = plan.HasAdvancedReports || plan.HasCustomReports || plan.HasDataExport || plan.HasPrioritySupport;
                                            }

                                            @if (hasIntegrations)
                                            {
                                                <div class="feature-group mb-3">
                                                    <h6>Integrations</h6>
                                                    @if (plan.HasWhatsAppIntegration)
                                                    {
                                                        <div class="feature-item">
                                                            <i class="fa-brands fa-whatsapp"></i>
                                                            <span>WhatsApp</span>
                                                        </div>
                                                    }
                                                    @if (plan.HasFacebookIntegration)
                                                    {
                                                        <div class="feature-item">
                                                            <i class="fa-brands fa-facebook"></i>
                                                            <span>Facebook</span>
                                                        </div>
                                                    }
                                                    @if (plan.HasEmailIntegration)
                                                    {
                                                        <div class="feature-item">
                                                            <i class="fa-solid fa-envelope"></i>
                                                            <span>Email</span>
                                                        </div>
                                                    }
                                                    @if (plan.HasCustomAPIAccess)
                                                    {
                                                        <div class="feature-item">
                                                            <i class="fa-solid fa-code"></i>
                                                            <span>Custom API</span>
                                                        </div>
                                                    }
                                                </div>
                                            }

                                            @if (hasReportsSupport)
                                            {
                                                <div class="feature-group mb-3">
                                                    <h6>Reports & Support</h6>
                                                    @if (plan.HasAdvancedReports)
                                                    {
                                                        <div class="feature-item">
                                                            <i class="fa-solid fa-chart-bar"></i>
                                                            <span>Advanced Reports</span>
                                                        </div>
                                                    }
                                                    @if (plan.HasCustomReports)
                                                    {
                                                        <div class="feature-item">
                                                            <i class="fa-solid fa-file-chart"></i>
                                                            <span>Custom Reports</span>
                                                        </div>
                                                    }
                                                    @if (plan.HasDataExport)
                                                    {
                                                        <div class="feature-item">
                                                            <i class="fa-solid fa-download"></i>
                                                            <span>Data Export</span>
