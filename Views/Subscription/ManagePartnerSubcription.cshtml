<script>
function upgradePlan(channelPartnerId, currentPlanId, currentBillingCycle, endDate) {
    document.getElementById('channelPartnerId').value = channelPartnerId;
    document.getElementById('currentPlanId').value = currentPlanId;
    window.currentBillingCycle = currentBillingCycle;
    window.channelPartnerId = channelPartnerId;
    
    // Reset all plan cards
    document.querySelectorAll('.plan-card').forEach(card => {
        card.classList.remove('active-plan');
        const badge = card.querySelector('.current-plan-badge');
        const expireDiv = card.querySelector('.current-plan-expire');
        const monthlyPricing = card.querySelector('.monthly-pricing');
        const annualPricing = card.querySelector('.annual-pricing');
        
        badge.style.display = 'none';
        expireDiv.style.display = 'none';
        badge.textContent = 'Current Plan';
        monthlyPricing.classList.remove('current-billing-cycle');
        annualPricing.classList.remove('current-billing-cycle');
        
        // Remove any scheduled badges
        const existingScheduledBadge = card.querySelector('.scheduled-plan-badge');
        if (existingScheduledBadge) {
            existingScheduledBadge.remove();
        }
    });
    
    // Highlight current plan
    const currentPlanCard = document.getElementById('plan-' + currentPlanId);
    if (currentPlanCard) {
        currentPlanCard.classList.add('active-plan');
        const badge = currentPlanCard.querySelector('.current-plan-badge');
        const expireDiv = currentPlanCard.querySelector('.current-plan-expire');
        const expireDateSpan = currentPlanCard.querySelector('.expire-date');
        const monthlyPricing = currentPlanCard.querySelector('.monthly-pricing');
        const annualPricing = currentPlanCard.querySelector('.annual-pricing');
        
        badge.textContent = `Current Plan (${currentBillingCycle})`;
        badge.style.display = 'inline-block';
        expireDateSpan.textContent = endDate;
        expireDiv.style.display = 'block';
        
        // Highlight current billing cycle
        if (currentBillingCycle.toLowerCase() === 'trial') {
            // For trial plans, don't highlight any pricing cycle
            // Just show the trial badge
        } else if (currentBillingCycle.toLowerCase() === 'monthly') {
            monthlyPricing.classList.add('current-billing-cycle');
        } else if (currentBillingCycle.toLowerCase() === 'annual') {
            annualPricing.classList.add('current-billing-cycle');
        }
    }
    
    // Highlight scheduled plans
    const scheduledSubscriptions = @Html.Raw(Json.Serialize(ViewBag.ScheduledSubscriptions ?? new List<object>()));
    const partnerScheduled = scheduledSubscriptions.filter(s => s.channelPartnerId == channelPartnerId);
    
    partnerScheduled.forEach(scheduled => {
        const scheduledPlanCard = document.getElementById('plan-' + scheduled.planId);
        if (scheduledPlanCard) {
            const planHeader = scheduledPlanCard.querySelector('.plan-header');
            const scheduledBadge = document.createElement('span');
            scheduledBadge.className = 'badge bg-warning scheduled-plan-badge';
            scheduledBadge.textContent = `Scheduled (${scheduled.billingCycle})`;
            scheduledBadge.style.marginLeft = '8px';
            planHeader.appendChild(scheduledBadge);
        }
    });
    
    new bootstrap.Modal(document.getElementById('upgradePlanModal')).show();
}

function selectPlan(planId, billingCycle, amount, immediate = false) {
    const channelPartnerId = document.getElementById('channelPartnerId').value;
    const currentPlanId = document.getElementById('currentPlanId').value;
    
    if (planId == currentPlanId && billingCycle == window.currentBillingCycle && immediate) {
        Swal.fire({
            icon: 'info',
            title: 'Already Current Plan',
            text: 'This is already the current plan with the same billing cycle.'
        });
        return;
    }
    
    const planName = document.querySelector(`#plan-${planId} .plan-name`).textContent;
    const actionType = immediate ? 'immediately change' : 'schedule upgrade';
    const timing = immediate ? 'now' : 'after current plan expires';
    
    let confirmMessage;
    
    if (!immediate) {
        const scheduledSubscriptions = @Html.Raw(Json.Serialize(ViewBag.ScheduledSubscriptions ?? new List<object>()));
        const partnerScheduled = scheduledSubscriptions.filter(s => s.channelPartnerId == channelPartnerId);
        
        const hasExactScheduled = partnerScheduled.some(s => 
            s.planId == planId && s.billingCycle.toLowerCase() === billingCycle.toLowerCase()
        );
        
        if (hasExactScheduled) {
            const existingScheduled = partnerScheduled.find(s => 
                s.planId == planId && s.billingCycle.toLowerCase() === billingCycle.toLowerCase()
            );
            Swal.fire({
                icon: 'info',
                title: 'Already Scheduled',
                text: `You have already scheduled an upgrade to ${existingScheduled.planName} (${existingScheduled.billingCycle}) plan.`
            });
            return;
        }
        
        if (partnerScheduled.length > 0) {
            const scheduledPlanNames = partnerScheduled.map(s => `${s.planName} (${s.billingCycle})`).join(', ');
            confirmMessage = `This will replace your scheduled plan(s): ${scheduledPlanNames}. Continue to ${actionType} to ${billingCycle} ${planName} plan for ₹${amount} (${timing})?`;
        } else {
            confirmMessage = `${actionType} to ${billingCycle} ${planName} plan for ₹${amount} (${timing})?`;
        }
    } else {
        confirmMessage = `${actionType} to ${billingCycle} ${planName} plan for ₹${amount} (${timing})?\n\nThis will immediately expire the current plan and activate the new plan.`;
    }
    
    Swal.fire({
        title: immediate ? 'Confirm Immediate Change' : 'Confirm Scheduled Upgrade',
        text: confirmMessage,
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: immediate ? '#dc3545' : '#6f42c1',
        cancelButtonColor: '#d33',
        confirmButtonText: immediate ? 'Yes, change now!' : 'Yes, schedule!'
    }).then((result) => {
        if (result.isConfirmed) {
            const endpoint = immediate ? '/Subscription/AdminChangePlan' : '/Subscription/AdminUpgradePlan';
            const params = immediate ? {
                partnerId: channelPartnerId,
                newPlanId: planId,
                billingCycle: billingCycle,
                reason: 'Admin immediate plan change',
                __RequestVerificationToken: document.querySelector('input[name="__RequestVerificationToken"]').value
            } : {
                channelPartnerId: channelPartnerId,
                newPlanId: planId,
                billingCycle: billingCycle,
                __RequestVerificationToken: document.querySelector('input[name="__RequestVerificationToken"]').value
            };
            
            fetch(endpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: new URLSearchParams(params)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: data.message
                    }).then(() => {
                        bootstrap.Modal.getInstance(document.getElementById('upgradePlanModal')).hide();
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.message || 'Failed to change plan'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while changing the plan'
                });
            });
        }
    });
}

