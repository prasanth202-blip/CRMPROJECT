@model CRM.Models.UserModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutLogin";
}

<div class="login-left">
    <div class="brand-content">
        <div class="brand-logo">
            @if (!string.IsNullOrEmpty(ViewBag.CompanyLogo))
            {
                <img src="@ViewBag.CompanyLogo" alt="Company Logo" style="max-height: 80px; max-width: 200px; object-fit: contain;" />
            }
            else
            {
                <i class="fas fa-chart-network" style="color: white;"></i>
            }
        </div>
        <h1>CRM System</h1>
        <p>Join our platform today.</p>
    </div>
</div>

<div class="login-form-section" style="padding: 20px; max-width: 380px; overflow-y: auto; max-height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center; margin: 0 auto; background: white; border-radius: 10px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
    <div class="login-header" style="margin-bottom: 8px;">
        <h1 style="font-size: 1.3rem; margin-bottom: 3px;">Create Account</h1>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger" role="alert" style="margin-bottom: 8px; padding: 5px; font-size: 0.8rem;">
            <i class="fas fa-exclamation-circle"></i>
            <span>@ViewBag.Message</span>
        </div>
    }
    
    <form asp-action="Register" method="post">
        <div class="input-wrapper" style="margin-bottom: 6px; position: relative; display: flex; flex-direction: column; align-items: center;">
            <div style="position: relative; width: 140%;">
                <label asp-for="Username" class="form-label" style="margin-bottom: 1px; font-size: 0.8rem; text-align: left; display: block;">Username</label>
                <div style="position: relative;">
                    <i class="fas fa-user" style="position: absolute; left: 8px; top: 50%; transform: translateY(-50%); color: #6c757d; font-size: 0.7rem;"></i>
                    <input asp-for="Username" class="form-control" placeholder="Username" style="padding: 5px 5px 5px 25px; height: 30px; font-size: 0.8rem; width: 100%;" />
                </div>
            </div>
            <span asp-validation-for="Username" class="text-danger" style="font-size: 0.7rem;"></span>
        </div>

        <div class="input-wrapper" style="margin-bottom: 6px; position: relative; display: flex; flex-direction: column; align-items: center;">
            <div style="position: relative; width: 140%;">
                <label asp-for="Email" class="form-label" style="margin-bottom: 1px; font-size: 0.8rem; text-align: left; display: block;">Email</label>
                <div style="position: relative;">
                    <i class="fas fa-envelope" style="position: absolute; left: 8px; top: 50%; transform: translateY(-50%); color: #6c757d; font-size: 0.7rem;"></i>
                    <input asp-for="Email" class="form-control" placeholder="Email" style="padding: 5px 5px 5px 25px; height: 30px; font-size: 0.8rem; width: 100%;" />
                </div>
            </div>
            <span asp-validation-for="Email" class="text-danger" style="font-size: 0.7rem;"></span>
        </div>

        <div class="input-wrapper" style="margin-bottom: 6px; position: relative; display: flex; flex-direction: column; align-items: center;">
            <div style="position: relative; width: 140%;">
                <label asp-for="Phone" class="form-label" style="margin-bottom: 1px; font-size: 0.8rem; text-align: left; display: block;">Phone</label>
                <div style="position: relative;">
                    <i class="fas fa-phone" style="position: absolute; left: 8px; top: 50%; transform: translateY(-50%); color: #6c757d; font-size: 0.7rem;"></i>
                    <input asp-for="Phone" class="form-control" placeholder="Phone" style="padding: 5px 5px 5px 25px; height: 30px; font-size: 0.8rem; width: 100%;" />
                </div>
            </div>
            <span asp-validation-for="Phone" class="text-danger" style="font-size: 0.7rem;"></span>
        </div>

        <div class="input-wrapper" style="margin-bottom: 6px; position: relative; display: flex; flex-direction: column; align-items: center;">
            <div style="position: relative; width: 140%;">
                <label asp-for="Password" class="form-label" style="margin-bottom: 1px; font-size: 0.8rem; text-align: left; display: block;">Password</label>
                <div style="position: relative;">
                    <i class="fas fa-lock" style="position: absolute; left: 8px; top: 50%; transform: translateY(-50%); color: #6c757d; font-size: 0.7rem;"></i>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" style="padding: 5px 5px 5px 25px; height: 30px; font-size: 0.8rem; width: 100%;" />
                </div>
            </div>
            <span asp-validation-for="Password" class="text-danger" style="font-size: 0.7rem;"></span>
        </div>

        <div class="input-wrapper" style="margin-bottom: 8px; position: relative; display: flex; flex-direction: column; align-items: center;">
            <div style="position: relative; width: 140%;">
                <label asp-for="Role" class="form-label" style="margin-bottom: 1px; font-size: 0.8rem; text-align: left; display: block;">Role</label>
                <div style="position: relative;">
                    <i class="fas fa-user-tag" style="position: absolute; left: 8px; top: 50%; transform: translateY(-50%); color: #6c757d; font-size: 0.7rem; z-index: 10;"></i>
                    <select asp-for="Role" class="form-control" style="padding: 5px 5px 5px 25px; height: 30px; font-size: 0.8rem; width: 100%;"
                            asp-items="@(new SelectList(ViewBag.Roles as List<string> ?? new List<string>(), Model?.Role))">
                        <option value="">Select role</option>
                    </select>
                </div>
            </div>
            <span asp-validation-for="Role" class="text-danger" style="font-size: 0.7rem;"></span>
        </div>
        
        <button type="submit" class="btn-primary" style="margin-bottom: 6px; height: 35px; font-size: 0.8rem; width: 140%;">
            <i class="fas fa-user-plus"></i>Create Account
        </button>
        
        <p class="signup-text" style="margin-bottom: 0; font-size: 0.75rem;">
            Already have an account? <a href="/Account/Login">Sign In</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Clear the form if user navigates back to this page
        window.addEventListener("pageshow", function (event) {
            if (event.persisted || (performance.getEntriesByType("navigation")[0] &&
                performance.getEntriesByType("navigation")[0].type === "back_forward")) {
                document.querySelector("form").reset();
            }
        });
    </script>
}
